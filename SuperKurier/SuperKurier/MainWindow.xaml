                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="{Binding BackgroundOption}" Opacity="0.8" />
                    </Grid.Background>
                    <Grid.CommandBindings>
                        <CommandBinding Command="New" CanExecute="AddCustomer_CanExecute" />
                    </Grid.CommandBindings>
                    <Grid Grid.Column="1" Margin="0,0,10,0" Cursor="Hand" MouseDown="PackIcon_MouseDown" Width="30" Height="30" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Right" >
                        <materialDesign:PackIcon Kind="Close" Foreground="#FF8B0D0D"   Width="30" Height="30" />
                    </Grid>
                    <StackPanel Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Margin="30"  Background="{Binding BackgroundOption}">
                        <Label Content="Pracownik" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto"  Margin="0,0,0,0" Foreground="{Binding ForegroundOption}"/>
                        <Label Content="Imię:" HorizontalAlignment="Stretch" VerticalAlignment="Top"   Margin="30,40,0,0" Foreground="{Binding ForegroundOption}"/>
                        <TextBox x:Name="EmployeeFirstName" HorizontalAlignment="Stretch" Height="23" Margin="30,15,30,0" Text="{Binding EmployeeFirstName}"  TextWrapping="Wrap" VerticalAlignment="Top"  Background="{Binding InputOption}"/>
                        <Label Content="Nazwisko:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto"  Margin="30,30,0,0" Foreground="{Binding ForegroundOption}"/>
                        <TextBox x:Name="EmployeeLastName" HorizontalAlignment="Stretch" Height="23" Margin="30,15,30,0" Text="{Binding EmployeeLastName}" TextWrapping="Wrap" VerticalAlignment="Top"  Background="{Binding InputOption}"/>
                        <Label Content="Hasło:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto"  Margin="30,30,0,0" Foreground="{Binding ForegroundOption}"/>
                        <PasswordBox x:Name="EmployeePassword" HorizontalAlignment="Stretch" Height="23" Margin="30,15,30,0" VerticalAlignment="Top"  Background="{Binding InputOption}"/>
                        <Label Content="Powtórz hasło:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto"  Margin="30,30,0,0" Foreground="{Binding ForegroundOption}"/>
                        <PasswordBox x:Name="EmployeeRepeatPassword" HorizontalAlignment="Stretch" Height="23" Margin="30,15,30,0" VerticalAlignment="Top"  Background="{Binding InputOption}"/>
                        <Label Content="Wynagrodzenie:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto"  Margin="30,30,0,0" Foreground="{Binding ForegroundOption}"/>
                        <TextBox x:Name="EmployeeSalary" HorizontalAlignment="Stretch" Height="23" Margin="30,15,30,0" TextWrapping="Wrap" Text="{Binding Path=EmployeeSalary,UpdateSourceTrigger=LostFocus,
                        ValidatesOnDataErrors=true, NotifyOnValidationError=true}" Validation.Error="Validation_Error" VerticalAlignment="Top"  Background="{Binding InputOption}" Foreground="{Binding ForegroundOption}"/>
                        <Label Content="Stanowisko:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto"  Margin="30,30,0,0" Foreground="{Binding ForegroundOption}"/>
                        <ComboBox x:Name="EmployeePosition" ScrollViewer.VerticalScrollBarVisibility="Auto" MaxDropDownHeight="120" HorizontalAlignment="Stretch" VerticalAlignment="Top"   Margin="30,15,30,0"  ItemsSource="{Binding Positions}" Background="{Binding InputOption}"
